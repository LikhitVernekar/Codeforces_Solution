#include <iostream>
#include <cmath>
using namespace std;
int main()
{
int a[5][5],s=0;
int x=0,y=0;
for(int i=0;i<5;i++){
    for(int j=0;j<5;j++){
        cin>>a[i][j];
    }
}
for(int i=0;i<5;i++){
    for(int j=0;j<5;j++){
        if(a[i][j]==1){
            if(i!=2){
            x=abs(2-i);
            }
        }
        if(a[i][j]==1){
            if(j!=2){
            y=abs(2-j);
            }
        }
    }
}
cout<<x+y;
    return 0;
}
