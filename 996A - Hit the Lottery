#include <iostream>
using namespace std;
int main()
{
  int n;
  int count=0;
  cin>>n;
  int t;
  while(n!=0){
      if(n>=100){
          t=n/100;
          count=count+t;
          n=n-(t*100);
      }
      else if(n>=20){
          t=n/20;
          count+=t;
          n=n-(t*20);
      }
      else if(n>=10){
          t=n/10;
          count+=t;
          n=n-(t*10);
      }
      else if(n>=5){
          t=n/5;
          count+=t;
          n=n-(t*5);
      }
      else if(n>=1){
          t=n/1;
          count+=t;
          n=n-(t*1);
      }
      
  }
  cout<<count;
    return 0;
}
